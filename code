#include <stdio.h>

int main(){
	
	// Question 1
	
	int arr[5];
	int i;
	
	for (i = 0; i < 5; i++)
	{
		printf("Enter value %d: ",i+1);
		scanf("%d",&arr[i]);
	}
	
	printf("\n%d ",arr[4]);
	
	for (i = 0; i < 4; i++)
	{
		printf("%d ",arr[i]);
	}
	
	// Question 2
	
	printf("\n");
	printf("\n");
	
	int arr2[10];
	int search;
	int occur = 0;
	
	for (i = 0; i < 10; i++)
	{
		printf("Enter value %d: ",i+1);
		scanf("%d",&arr2[i]);
	}
	
	printf("\nEnter number to search: ");
	scanf("%d",&search);
	
	for (i = 0; i < 10; i++)
	{
		if (arr2[i] == search)
		{
			occur = occur + 1;
		}
	}
	
	printf("\n");
	
	if (occur == 0)
	{
		printf("number not found");
	}	else	{
		printf("number occurred %d times",occur);
	}
	
	printf("\n");
	
	// Question 3
	
	printf("\n");
	
	int pass[10];
	int fail[10];
	int temp;
	int pass1 = 0;
	int fail1 = 0;
	int sumfail = 0;
	int sumpass = 0;
	
	for (i = 0; i < 10; i++)
	{
		printf("Enter marks of student %d: ",i+1);
		scanf("%d",&temp);
		if (temp == -1)
		{
			break;
		}	else if (temp >= 0 && temp <= 5)
		{
			fail[fail1] = temp;
			fail1 = fail1 + 1;
		}	else if	(temp >5 && temp <= 10)
		{
			pass[pass1] = temp;
			pass1 = pass1 + 1;
		}	else	{
			printf("\nInvalid input");
			return 0;
		}
	}
	
	
	printf("\nMarks of failed students:");
	
	for (i = 0; i < fail1; i++)
	{
		printf(" %d,",fail[i]);
		sumfail = sumfail + fail[i];
	}
	
	printf("\nMarks of passed students:");
	
	for (i = 0; i < pass1; i++)
	{
		printf(" %d,",pass[i]);
		sumpass = sumpass + pass[i];
	}
	
	printf("\nAverage marks of failed students: %d",sumfail/fail1);
	printf("\nAverage marks of passed students: %d",sumpass/pass1);
	
	printf("\n");
	
	// Question 4
	
	char str[100];   
    i = 0;    
	   
    printf("\nEnter a sentence: ");
    scanf(" %[^\n]", str);
    

    while (str[i] != '\0') { 
        if (str[i] >= 'A' && str[i] <= 'Z') {
            str[i] = str[i] + 32;
        }
        else if (str[i] >= 'a' && str[i] <= 'z') {
            str[i] = str[i] - 32;
        }
        i++;  
    }

    printf("Converted sentence: %s", str);
    
    printf("\n");

    // Question 5
    
    int numbers[10];                 
    int max, min;       
    int difference;     

    printf("\nEnter 10 integers:\n");
    for(i = 0; i < 10; i++) {
        scanf("%d", &numbers[i]);   
    }

    max = numbers[0];
    min = numbers[0];

    for(i = 1; i < 10; i++) {
        if(numbers[i] > max) {
            max = numbers[i];   
        }
        if(numbers[i] < min) {
            min = numbers[i];   
        }
    }

    difference = max - min;
    printf("Difference (max - min) = %d", difference);

	printf("\n");
	
	// Question 6
	
    char str2[50];     
    i = 0;         
    int vowels = 0;    
    int consonants = 0;

    printf("\nEnter a word: ");
    scanf("%s", str2);

    while (str2[i] != '\0') {

        if ((str2[i] >= 'A' && str2[i] <= 'Z') || (str2[i] >= 'a' && str2[i] <= 'z')) {

            if (str2[i] == 'A' || str2[i] == 'E' || str2[i] == 'I' || str2[i] == 'O' || str2[i] == 'U' ||
                str2[i] == 'a' || str2[i] == 'e' || str2[i] == 'i' || str2[i] == 'o' || str2[i] == 'u') {
                vowels++;
            }
            else {
                consonants++;
            }
        }

        i++;  
    }

    printf("Vowels: %d\n", vowels);
    printf("Consonants: %d", consonants);
    
    printf("\n");
    
    // Question 7
    
	i = 0;
	int j = 1;
	int l;
	int ID[10];
	
	printf("\nEnter 10 integers:\n");
	for(l = 0; l < 10; l++){
		scanf("%d",&ID[l]);
	}
	
	while (1){
		if (j == 10){
			i = i + 1;
			j = i + 1;
			if (i == 10){
				break;
			}
			continue;
		}
		if (ID[i] != -1){
			if (ID[i] == ID[j]){
				ID[j] = -1;
			}
		}
		j = j + 1;
	}
	
	printf("Updated array after removing duplicates:\n");
	for(i = 0; i < 10; i++) {
        printf("%d ", ID[i]);
    }
    
    printf("\n");
    
	// Question 8
	
    char str3[100];   
	i = 0;

    printf("\nEnter a string (can include letters, digits, symbols etc): ");
    scanf("%[^A-Za-z]", str3);

    printf("\nNon-alphabetic characters entered: ");
    while (str3[i] != '\0') {
        printf("%c", str3[i]);
        i++;
    }

    return 0;
}
